@model FribergRentalCars.Models.Car

@{
    ViewData["Title"] = "CreateCar";
}
<hr />
<h4 class="primary-text-color p-2">Registrera ny bil</h4>

<div class="row">
    <div class="table-responsive col-md-4 primary-text-color">
        <form asp-action="CreateCar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="Model" class="control-label">Bilmodell</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="ModelYear" class="control-label">Tillverknings-år</label>
                <input asp-for="ModelYear" class="form-control" />
                <span asp-validation-for="ModelYear" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="RegNumber" class="control-label">Registrerings-nummer</label>
                <input asp-for="RegNumber" class="form-control" />
                <span asp-validation-for="RegNumber" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Image" class="control-label">Bild (URL-länk)</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="PricePerDay" class="control-label">Pris (hyra/ dygn)</label>
                <input asp-for="PricePerDay" class="form-control" />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Description" class="control-label">Beskrivning</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label p-2">
                    <input class="form-check-input" asp-for="IsAvailable" /> Tillgänglig?
                </label>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Lägg till" class="btn btn-primary border-0" />
            </div>
        </form>
    </div>
</div>

