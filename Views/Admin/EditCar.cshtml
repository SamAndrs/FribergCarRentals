@model FribergRentalCars.Models.Car

@{
    ViewData["Title"] = "EditCar";
}
<hr />
<div class="col-md-4">
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item  bg-transparent">
            <h4 class="primary-text-color">Ändra uppgifter för bil:</h4>
        </li>
        <li class="list-group-item  bg-transparent">
            <h4 class="third-text-color">@Model.Model</h4>
        </li>
    </ul>
</div>

<div class="col-md-4 primary-text-color">
    <form asp-action="EditCar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CarId" />
        
        <div class="form-group p-2">
            <label asp-for="CarId" class="control-label">
                <strong>Bil ID:</strong>
                <label class="third-text-color">@Model.CarId</label>
            </label>
        </div>
        
        <div class="form-group p-2">
            <label asp-for="Model" class="control-label"><strong>Bilmodell</strong></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="ModelYear" class="control-label"><strong>År:</strong></label>
            <input asp-for="ModelYear" class="form-control" />
            <span asp-validation-for="ModelYear" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="RegNumber" class="control-label"><strong>Registrerings nummer:</strong></label>
            <input asp-for="RegNumber" class="form-control" />
            <span asp-validation-for="RegNumber" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="Image" class="control-label"><strong>Bild URL:</strong></label>
            <input asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="PricePerDay" class="control-label"><strong>Pris/ dag:</strong></label>
            <input asp-for="PricePerDay" class="form-control" />
            <span asp-validation-for="PricePerDay" class="text-danger"></span>
        </div>
        <div class="form-group p-2">
            <label asp-for="Description" class="control-label"><strong>Beskrivning:</strong></label>
            <textarea asp-for="Description" type="text" class="form-control" rows="3"></textarea> 
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label p-2">
                <input class="form-check-input" asp-for="IsAvailable" /> <strong>Tillgänglig?</strong>
            </label>
        </div>
        <div class="form-group p-2">
            <input type="submit" value="Spara" class="btn btn-primary border-0" />
            <input type="submit" asp-action="Delete" asp-route-id="@Model.CarId" value="Ta bort" class="btn btn-danger" />
        </div>
    </form>
</div>

