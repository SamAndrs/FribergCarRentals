@model FribergRentalCars.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Logga in";

    var errorMessage = TempData["ErrorMessage"] as string;
}

<div>
    <h4 class="primary-text-color">Logga in: Administratör</h4>
</div>

@{
    if(!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger col-md-4">
            @errorMessage
        </div>
    }
}

<hr />
<div class="row primary-text-color">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group p-2">
                <label asp-for="EmailOrUserName" class="control-label">Ange email eller användarnamn.</label>
                <input asp-for="EmailOrUserName" class="form-control" />
                <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <label asp-for="Password" class="control-label">Lösenord.</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <label asp-for="ConfirmPassword" class="control-label">Bekräfta lösenord</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Logga in" class="btn btn-primary border-0" />
            </div>

            
        </form>
    </div>
</div>

