@model FribergRentalCars.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Logga in";
}

<h4>Logga in: Administratör</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EmailOrUserName" class="control-label">Ange email eller användarnamn.</label>
                <input asp-for="EmailOrUserName" class="form-control" />
                <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Lösenord.</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Bekräfta lösenord</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Login"></a>
                <input type="submit" value="Logga in" class="btn btn-primary" />
            </div>

            
        </form>
    </div>
</div>
<div>
    <a asp-controller="Account" asp-action="Register">Nytt konto.</a>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Tillbaka</a>
</div>

