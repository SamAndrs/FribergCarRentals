@model FribergRentalCars.Models.Account

@{
    ViewData["Title"] = "Details";
    var userID = Context.Session.GetInt32("UserID");
}

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item  bg-transparent">
            <h4 class="primary-text-color">Mina Sidor: </h4>
        </li>
        <li class="list-group-item  bg-transparent">
            <h4 class="third-text-color"> @ViewBag.UserName</h4>
        </li>
        <li class="list-group-item bg-transparent">
            <h5 class="primary-text-color">Inloggad som Administratör</h5>
        </li>
    </ul>
</div>
<hr />
<div>    
    <dl class="row">
        <dl class="row primary-text-color">
            <dt class="col-sm-2">
                <a>Förnamn</a>
            </dt>
            <dd class="col-sm-9 third-text-color">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                <a>Efternamn</a>
            </dt>
            <dd class="col-sm-9 third-text-color">
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dd class="visually-hidden">
                @Html.DisplayFor(model => model.Adress.AdressId)
            </dd>

            <dt class="col-sm-2">
                <a>Adress</a>
            </dt>
            <dd class="col-sm-9 third-text-color">
                @Html.DisplayFor(model => model.Adress.Street),
                @Html.DisplayFor(model => model.Adress.PostalCode),
                @Html.DisplayFor(model => model.Adress.City)
            </dd>

            <dt class="col-sm-2">
                <a>Telefon-nummer</a>
            </dt>
            <dd class="col-sm-9 third-text-color">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                <a>Email</a>
            </dt>
            <dd class="col-sm-9 third-text-color">
                @Html.DisplayFor(model => model.Email)
            </dd>
    </dl>
</div>
<div>
    <a href=@Url.Action("EditAccount", "Admin", new {id = userID}) class="btn btn-primary border-0">Ändra uppgifter</a>
</div>
