@model FribergRentalCars.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "CreateAccount";
}

<h4 class="primary-text-color">Registrera nytt konto och användare</h4>

<form asp-action="CreateAccount">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   <div class="table-responsive col-md-6">
        <table class="table table-borderless primary-text-color">
            <thead>
                <tr>
                    <th scope="col">Konto uppgifter</th>
                    <th scope="col">Användar uppgifter</th>
                </tr>
            </thead>
            <tbody class="col-md-4">
            <td>
                <div class="form-group">
                    <label asp-for="Account.FirstName" class="control-label"><strong>Förnamn</strong></label>
                    <input asp-for="Account.FirstName" class="form-control" />
                    <span asp-validation-for="Account.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Account.LastName" class="control-label"><strong>Efternamn</strong></label>
                    <input asp-for="Account.LastName" class="form-control" />
                    <span asp-validation-for="Account.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Account.Adress.Street" class="control-label"><strong>Gatunamn</strong></label>
                    <input asp-for="Account.Adress.Street" class="form-control" />
                    <span asp-validation-for="Account.Adress.Street" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Account.Adress.City" class="control-label"><strong>Stad/ Ort</strong></label>
                    <input asp-for="Account.Adress.City" class="form-control" />
                    <span asp-validation-for="Account.Adress.City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Account.Adress.PostalCode" class="control-label"><strong>Postnummer</strong></label>
                    <input asp-for="Account.Adress.PostalCode" class="form-control" />
                    <span asp-validation-for="Account.Adress.PostalCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Account.PhoneNumber" class="control-label"><strong>Telefon</strong></label>
                    <input asp-for="Account.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Account.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Account.Email" class="control-label"><strong>Email</strong></label>
                    <input asp-for="Account.Email" class="form-control" />
                    <span asp-validation-for="Account.Email" class="text-danger"></span>
                </div>
            </td>

            <td>
                <div class="form-group">
                    <label asp-for="User.UserName" class="control-label"><strong>Ange ett användarnamn</strong></label>
                    <input asp-for="User.UserName" class="form-control" />
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.Password" class="control-label"><strong>Ange ett lösenord</strong></label>
                    <input asp-for="User.Password" class="form-control" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.ConfirmPassword" class="control-label"><strong>Bekräfta lösenord</strong></label>
                    <input asp-for="User.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>
                </div>
            </td>
            </tr>
            </tbody>
        </table>
   </div>

    <div class="form-group">
        <input type="submit" value="Registrera" class="btn btn-primary border-0" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
