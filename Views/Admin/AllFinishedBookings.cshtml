@model List<FribergRentalCars.ViewModels.AdminViewModels.AllBookingsViewModel>

@{
    ViewData["Title"] = "AllFinishedBookings";
}

<h4 class="primary-text-color">Historiska bokningar</h4>

<table class="table">
    <thead class="primary-text-color">
        <tr>
            <th>
                <p>Boknings-Id</p>
            </th>
            <th>
                <p>Bil</p>
            </th>
            <th>
                <p>Bil-Id</p>
            </th>
            <th>
                <p>
                    Modell (år)
                </p>
            </th>
           <th>
               <p>Hyrd av/ konto id</p>
           </th>
            <th>
                <p>Hyrd</p>
                <p>Från</p>
            </th>
            <th>
                <p>Till</p>
            </th>
            <th>
                <p>Total kostnad</p>
            </th>
            <th>
                <p>Status</p>
            </th>
        </tr>
    </thead>
    <tbody style="color: dimgrey">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingId)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Car.Image))
                    {
                        <div>
                            <img src="@item.Car.Image" alt="bild på bil" class="img-fluid" width="100" height="100" />
                        </div>
                    }
                    else
                    {
                        <p>Bild saknas</p>
                    }
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Car.CarId)
                </th>
                <td>
                    @item.Car.Model (@item.Car.ModelYear)
                </td>
                <td>
                    @item.Email /@item.AccountId
                </td>
                <td>
                    @item.StartDate
                </td>
                <td>
                    @item.EndDate
                </td>
                <td>
                    @item.TotalCost kr
                </td>
                <td>
                    Avslutad
                </td>
               
                <td class="visually-hidden">
                    @Html.DisplayFor(modelItem => item.Car)
                </td>
            </tr>
        }
    </tbody>
</table>
