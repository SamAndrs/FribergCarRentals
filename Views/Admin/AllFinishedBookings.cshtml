@model List<FribergRentalCars.ViewModels.AdminViewModels.AllBookingsViewModel>

@{
    ViewData["Title"] = "AllFinishedBookings";
}

<h4>Historiska bokningar</h4>

<p>
    <a asp-action="Details">Mitt Konto</a>
    <a asp-action="AllActiveBookings">Pågående Bokningar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p>Boknings-Id</p>
            </th>
            <th>
                <p>Bil</p>
            </th>
            <th>
                <p>Bil-Id</p>
            </th>
            <th>
                <p>
                    Modell (år)
                </p>
            </th>
           <th>
               <p>Hyrd av/ konto id</p>
           </th>
            <th>
                <p>Hyrd</p>
                <p>Från</p>
            </th>
            <th>
                <p>Till</p>
            </th>
            <th>
                <p>Total kostnad</p>
            </th>
            <th>
                <p>Status</p>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingId)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Car.Image))
                    {
                        <div>
                            <img src="@item.Car.Image" alt="bild på bil" class="img-fluid" width="80" height="80" />
                        </div>
                    }
                    else
                    {
                        <p>Bild saknas</p>
                    }
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Car.CarId)
                </th>
                @* // IF BOOKING IS FINISHED display text in grey color*@
                @if(item.IsFinished)
                {
                    <td>
                        <span style="color: dimgrey">@item.Car.Model (@item.Car.ModelYear)</span>
                    </td>
                    <td>
                        <span>@item.Email /@item.AccountId</span>
                    </td>
                    <td>
                        <span style="color: dimgrey">@item.StartDate</span>
                    </td>
                    <td>
                        <span style="color: dimgrey">@item.EndDate</span>
                    </td>
                    <td>
                        <span style="color: dimgrey">@item.TotalCost kr </span>
                    </td>
                    <td>
                        <span style="color: dimgrey">Avslutad</span>
                    </td>
                }
                <td class="visually-hidden">
                    @Html.DisplayFor(modelItem => item.Car)
                </td>
            </tr>
        }
    </tbody>
</table>
