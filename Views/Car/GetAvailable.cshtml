@model IEnumerable<FribergRentalCars.Models.Car>

@{
    ViewData["Title"] = "GetAvailable";
}

<h3>Våra Bilar</h3>
<h6>(urval) Endast Tillgängliga</h6>
<div>
    <a asp-action="ListAll" asp-controller="Car">Tillbaka</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th class="visually-hidden">
                @Html.DisplayNameFor(model => model.CarId)
            </th>
            <th>
                <a>Modell</a>
            </th>
            <th>
                <a>Årtal</a>
            </th>
            <th>
                <a>Reg.Nr</a>
            </th>
            <th>
                <a>Bild</a>
            </th>
            <th>
                <a>Pris/ dag</a>
            </th>
            <th class="visually-hidden">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="visually-hidden">
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.Label("Boka")
            </th>
            <th>
                @Html.Label("Se bil")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td class="visually-hidden">
                    @Html.DisplayFor(modelItem => item.CarId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNumber)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <div>
                            <img src="@item.Image" alt="bild på bil" class="img-fluid" width="150" height="150"/>
                        </div>
                    }
                    else
                    {
                        <p>Bild saknas</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerDay)
                </td>
                <td class="visually-hidden">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="visually-hidden">
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>
                <td>
                    <button onclick="window.location='@Url.Action("Create", "Booking", new { id = item.CarId })'" class="btn btn-primary">Boka</button>
                </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CarId">Beskrivning</a>
            </td>
        </tr>
}
    </tbody>
</table>