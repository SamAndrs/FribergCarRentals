@model FribergRentalCars.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Skapa nytt konto</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="Account.FirstName" class="control-label">Förnamn</label>
                            <input asp-for="Account.FirstName" class="form-control" />
                            <span asp-validation-for="Account.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Account.LastName" class="control-label">Efternamn</label>
                            <input asp-for="Account.LastName" class="form-control" />
                            <span asp-validation-for="Account.LastName" class="text-danger"></span>
                        </div>

                        <h4>Address</h4>
                        <div class="form-group">
                            <label asp-for="Account.Adress.Street" class="control-label">Gatunamn</label>
                            <input asp-for="Account.Adress.Street" class="form-control" />
                            <span asp-validation-for="Account.Adress.Street" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Account.Adress.City" class="control-label">Stad/ ort</label>
                            <input asp-for="Account.Adress.City" class="form-control" />
                            <span asp-validation-for="Account.Adress.City" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Account.Adress.PostalCode" class="control-label">Postnummer</label>
                            <input asp-for="Account.Adress.PostalCode" class="form-control" />
                            <span asp-validation-for="Account.Adress.PostalCode" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Account.PhoneNumber" class="control-label">Telefon-nummer</label>
                            <input asp-for="Account.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Account.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Account.Email" class="control-label">Email</label>
                            <input asp-for="Account.Email" class="form-control" />
                            <span asp-validation-for="Account.Email" class="text-danger"></span>
                        </div>
                    </td>

                    <td>
                        <h4>Lösenord</h4>
                        <div class="form-group">
                            <label asp-for="User.UserName" class="control-label">Ange ett användarnamn</label>
                            <input asp-for="User.UserName" class="form-control" />
                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="User.Password" class="control-label">Ange ett lösenord</label>
                            <input asp-for="User.Password" class="form-control" />
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="User.ConfirmPassword" class="control-label">Bekräfta lösenord</label>
                            <input asp-for="User.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </td>
                </tr>

            </table>

            <div class="form-group">
                <input type="submit" value="Registrera" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
