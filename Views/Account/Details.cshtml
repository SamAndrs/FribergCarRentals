@model FribergRentalCars.Models.Customer

@{
    ViewData["Title"] = "Details";
}


<h1>Konto uppgifter</h1>

<div>
    <h4>@Context.Session.GetString("user")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <a>Förnamn</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            <a>Efternamn</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        
        <dt class="col-sm-2">
            <a>Adress</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adress.Street)
            @Html.DisplayFor(model => model.Adress.PostalCode)
            @Html.DisplayFor(model => model.Adress.City)
        </dd>


        <dt class="col-sm-2">
            <a>Telefon-nummer</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            <a>Email</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
        
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CustomerId">Ändra uppgifter</a>
    <a asp-action="Rentals" asp-route-id="@Model?.CustomerId">Se mina bokningar</a>
    <a asp-controller="Home" asp-action="Index">Tillbaka</a>
</div>
