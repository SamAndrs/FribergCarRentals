@model FribergRentalCars.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<h1>Ändra uppgifter</h1>

<h4>@Context.Session.GetString("user")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Förnamn</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Efternamn</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <h5>Address</h5>
            <div class="form-group">
                <label asp-for="Adress.Street" class="control-label">Gatunamn</label>
                <input asp-for="Adress.Street" class="form-control" />
                <span asp-validation-for="Adress.Street" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adress.City" class="control-label">Stad</label>
                <input asp-for="Adress.City" class="form-control" />
                <span asp-validation-for="Adress.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adress.PostalCode" class="control-label">Postnummer</label>
                <input asp-for="Adress.PostalCode" class="form-control" />
                <span asp-validation-for="Adress.PostalCode" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Telefon-nummer</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <label asp-for="Email">@Model.Email</label>

            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ChangePassword">Ändra Lösenord</a>
    <a asp-action="ChangeEmail" asp-route-id="@Model?.CustomerId">Ändra Email</a>
    <a asp-action="Rentals" asp-route-id="@Model?.CustomerId">Se mina bokningar</a>
    <a asp-controller="Home" asp-action="Index">Tillbaka</a>
</div>

